---

 interface Props{
    title: string
    description: string
    link?: string
    date: string

}

const { title, description, link, date } = Astro.props
---

<li class="mb-10 ms-4">
        <div class="absolute w-3 h-3 bg-neutral-quaternary dark:bg-white rounded-full mt-1.5 -start-1.5 border border-buffer dark:border-white"></div>
        <time class="text-sm font-normal leading-none text-body">{date}</time>
        <h3 class="text-lg font-semibold text-blue-200 mt-4">{title}</h3>
        <p class="mb-4 text-base font-normal text-body text-pretty">{description}</p>
        
        
    </li>